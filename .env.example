# Whisper Unified — Environment Variables

# ===== Service Port =====
PORT=9002

# ===== Whisper STT Model =====
# Available: Systran/faster-whisper-small, medium, large-v3
WHISPER_MODEL_NAME=Systran/faster-whisper-medium
WHISPER_LANGUAGE=auto
# float16 for GPU, int8 for CPU
WHISPER_COMPUTE_TYPE=float16

# ===== GPU =====
CUDA_VISIBLE_DEVICES=0

# ===== Speaker Diarization (PyAnnote) =====
ENABLE_SPEAKER_DIARIZATION=true
SPEAKER_DIARIZATION=true
PYANNOTE_MODEL=pyannote/speaker-diarization-3.1
# Required for PyAnnote — get from https://huggingface.co/settings/tokens
HUGGINGFACE_TOKEN=hf_your_token_here

# ===== Redis Cache =====
REDIS_URL=redis://localhost:6380
ENABLE_CACHING=true
CACHE_TTL=3600

# ===== Language Detection =====
LANGUAGE_DETECTION=true
WHISPER_SUPPORTED_LANGUAGES=pl,en,auto

# ===== Auto-transcription Control =====
WHISPER_AUTO_TRANSCRIPTION=false
WHISPER_UPLOAD_ONLY_MODE=true
WHISPER_REQUIRE_EXPLICIT_START=true
WHISPER_SHOW_FILE_INFO_ON_UPLOAD=true

# ===== Default Processing Settings =====
WHISPER_DEFAULT_LANGUAGE=auto
WHISPER_DEFAULT_DIARIZATION=true
WHISPER_DEFAULT_MODEL=whisper-multilang
WHISPER_DEFAULT_FORMAT=detailed_json
